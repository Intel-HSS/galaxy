<tool id="adam_gatk" name="GATK Adam Flow" version="1.0">
  <description>Run complete GATK Adam Flow</description>
  <command interpreter="bash">
    adam_transform_GATK.sh  $input $output
  </command>
  <inputs>
    <param format="bam" name="input" type="data" label="HDFS_INPUT_FILE" help="--transform_bam_to_adam.sh HDFS_INPUT_FILE help--"/>
    <param format="vcf" name="input" type="data" label="HDFS_INPUT_FILE" help="--transform_bam_to_adam.sh HDFS_INPUT_FILE help--"/>
  </inputs>
  <outputs>
    <data format="adam" name="output" metadata_source="input"/>
    <data format="var.adam" name="output" metadata_source="input"/>
    <data format="mkdup.adam" name="output" metadata_source="input"/>
    <data format="sort.adam" name="output" metadata_source="input"/>
    <data format="ri.adam" name="output" metadata_source="input"/>
    <data format="bqsr.adam" name="output" metadata_source="input"/>
  </outputs>
  <help>
  -- adam_transform_GATK.sh long help WIP --
  </help>
</tool>
