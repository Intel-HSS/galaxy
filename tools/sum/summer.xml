<tool id="summer" name="summer">
    <description>Adds all elements over all input files</description>
    <command interpreter="python">summer.py
        #for $i, $s in enumerate( $vectors )
            ${s.input}
        #end for
        $sum_value
    </command>
    <inputs>
        <repeat name="vectors" title="Vectors">
            <param name="input" type="data" label="input"/>
        </repeat>
    </inputs>
    <outputs>
        <data name="sum_value" label="sum_value" format="txt"/>
    </outputs>
</tool>

